/* Fonts
   ========================================================================== */
$font-primary = 'Roboto'

/* Colors
   ========================================================================== */
$color-white 	 = #fff
$color-black 	 = #000
$color-primary 	 = #0F1C2D
$color-secondary = #AB1725
$color-neutral 	 = #A8A8A8

/* Breakpoints
   ========================================================================== */
$mobile  = 420px
$phablet = 768px
$tablet  = 1024px
$desktop = 1280px

rupture.scale 		 = 0 $mobile $phablet $tablet $desktop
rupture.scale-names  = 'mobile' 'phablet' 'tablet' 'desktop' 'hd'
rupture.anti-overlap = -1px
