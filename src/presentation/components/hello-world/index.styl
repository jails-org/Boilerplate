.hello-world
	align-items center
	justify-content center
	height 100vh
	text-align center
	display flex
	padding 0 25px

	&__content
		height 600px

	h1
		font-size 60px
		font-weight 300
		margin 15px 0 0

	blockquote
		margin 15px 0
		font-size 18px
		max-width 550px
		line-height 1.5

	a
		display block
		margin 15px 0

	.logo
		width 200px
		height 200px
		margin 10px 0

	.list
		display flex
		justify-content center
		height 250px

		li
			margin 20px 10px 0px

		img
			max-width 100px
			border-radius 50%

